{% extends 'base.html.twig' %}

{% block body %}
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">roles</th>
          <th scope="col">password</th>
          <th scope="col">First name</th>
          <th scope="col">Last name</th>
          <th scope="col">email</th>
          <th scope="col">age</th>
          <th scope="col">cin</th>
          <th scope="col">actions</th>
        </tr>
      </thead>
      <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{user.id}}</th>
                <td>{{user.roles}}</td>
                <td>{{user.password}}</td>
                <td>{{user.firstName}}</td>
                <td>{{user.lastName}}</td>
                <td>{{user.email}}</td>
                <td>{{user.age}}</td>
                <td>{{user.cin}}</td>
                <td class="btnContainer">
                    <a class="btn btn-danger " href="{{ path('user_delete',{id:user.id})}}"><i class="fa-solid fa-user-minus bntOnHover"></i></a>
                    <a class="btn btn-light " href="{{ path('user_update',{id:user.id})}}"><i class="fa-regular fa-pen-to-square bntOnHover"></i></a>
                </td>
            </tr>
        {% endfor %}

      </tbody>
    </table>
    <div>
      <center>
        <a class="btn btn-primary" type="submit" href="{{ path('user_create')}}">Create new User</a>
      </center>
    </div>
{% endblock %}
